<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration PUBLIC
        "-//APACHE//DTD LOG4J 1.2//EN" "http://logging.apache.org/log4j/1.2/apidocs/org/apache/log4j/xml/doc-files/log4j.dtd">
<log4j:configuration>

    <appender name="FILE" class="org.apache.log4j.RollingFileAppender">
        <param name="File" value="./test.log"/>
        <param name="Append" value="false"/>
        <param name="MaxFileSize" value="100MB"/>
        <param name="MaxBackupIndex" value="10"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{yyyy/MM/dd HH:mm:ss,SSS} [%t] %-5p %c %x - %m%n"/>
        </layout>
    </appender>
    <appender name="stdout" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{yyyy/MM/dd HH:mm:ss,SSS} [%t] %-5p %c %x - %m%n"/>
        </layout>
    </appender>

    <appender name="ASYNC" class="org.apache.log4j.AsyncAppender">
        <param name="BufferSize" value="2000"/>
        <appender-ref ref="stdout"/>
        <appender-ref ref="FILE"/>
    </appender>

    <category name="twitter4j" additivity="false">
        <priority value="WARN"/>
        <appender-ref ref="ASYNC"/>
    </category>
    <category name="org.eclipse" additivity="false">
        <priority value="WARN"/>
        <appender-ref ref="ASYNC"/>
    </category>
    <category name="org.apache" additivity="false">
        <priority value="WARN"/>
        <appender-ref ref="ASYNC"/>
    </category>
    <category name="com.ning" additivity="false">
        <priority value="WARN"/>
        <appender-ref ref="ASYNC"/>
    </category>
    <category name="kafka" additivity="false">
        <priority value="WARN"/>
        <appender-ref ref="ASYNC"/>
    </category>
    <category name="com.amazonaws" additivity="false">
        <priority value="WARN"/>
        <appender-ref ref="ASYNC"/>
    </category>

    <root>
        <priority value="DEBUG"/>
        <appender-ref ref="ASYNC"/>
    </root>
</log4j:configuration>
